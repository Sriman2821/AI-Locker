{
  "name": "SourceCode",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Repository name"
    },
    "platform": {
      "type": "string",
      "enum": [
        "github",
        "gitlab",
        "bitbucket",
        "other"
      ],
      "description": "Source code platform"
    },
    "url": {
      "type": "string",
      "description": "Repository URL"
    },
    "description": {
      "type": "string",
      "description": "Short description"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technology tags"
    }
  },
  "required": [
    "name",
    "platform",
    "url"
  ]
}